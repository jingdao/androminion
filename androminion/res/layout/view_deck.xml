<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

	<LinearLayout
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="vertical" >

	<LinearLayout
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pirates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/victoryTokens"
        android:background="@drawable/pirates"
        android:textColor="#ffff00"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/victoryTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pirates"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/victorytokens"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/guildsCoinTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/pirates"
        android:background="@drawable/guildscointokens"
        android:textColor="#0000FF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/debtTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/guildsCoinTokens"
		android:gravity="center"
        android:background="@drawable/debt"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/minusCoinToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/debtTokens"
        android:layout_alignParentTop="true"
        android:background="@drawable/minuscointoken"
		android:text="  -  "
        android:textColor="#0000FF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/minusCardToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/minusCoinToken"
        android:layout_alignParentTop="true"
        android:background="@drawable/minuscardtoken"
		android:text="  -  "
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/journeyToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/minusCardToken"
        android:layout_alignParentTop="true"
        android:background="@drawable/journeytoken"
		android:text=" J "
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lostInTheWoodsState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/journeyToken"
        android:layout_alignParentTop="true"
        android:background="@drawable/lostinthewoodsstate"
		android:text=" L "
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/deludedState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lostInTheWoodsState"
        android:layout_alignParentTop="true"
        android:background="@drawable/deludedstate"
		android:text=" D "
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/miserableState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/deludedState"
        android:layout_alignParentTop="true"
        android:background="@drawable/miserablestate"
		android:text=" M "
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

	</LinearLayout>

    <TextView
        android:id="@+id/counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:textSize="12sp" />

</LinearLayout>
</merge>
